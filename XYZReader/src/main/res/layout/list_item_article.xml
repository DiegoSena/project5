<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_cardview"
    android:layout_marginRight="@dimen/margin_cardview"
    android:layout_marginTop="@dimen/margin_cardview"
    android:layout_marginBottom="@dimen/margin_cardview"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:scaleType="centerCrop"
            android:contentDescription="@string/article_inage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_article_list"
            android:paddingTop="@dimen/padding_article_list"
            android:paddingRight="@dimen/padding_article_list"
            android:paddingBottom="@dimen/padding_artile_list_bottom"
            android:textColor="@color/textWhite"
            android:ellipsize="end"
            android:maxLines="4" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_article_list"
            android:paddingRight="@dimen/padding_article_list"
            android:paddingBottom="@dimen/padding_article_list"
            android:textColor="@color/textWhite"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
